generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @unique @default(uuid())
  email        String        @unique
  name         String
  password     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  googleSheets GoogleSheet[]
  syncEvents   SyncEvent[]
}

model GoogleSheet {
  id         String      @id @unique @default(uuid())
  sheetId    String      @unique
  name       String
  owner      User        @relation(fields: [userId], references: [id])
  userId     String
  columns    String[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  syncEvents SyncEvent[]
}


model SyncEvent {
  id            String      @id @unique @default(uuid())
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  googleSheet   GoogleSheet @relation(fields: [googleSheetId], references: [id])
  googleSheetId String
  status        String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  syncLogs      SyncLog[]
  sheetRows     SheetRow[]
}

model SyncLog {
  id          String    @id @unique @default(uuid())
  syncEvent   SyncEvent @relation(fields: [syncEventId], references: [id])
  syncEventId String
  logMessage  String
  logLevel    String
  createdAt   DateTime  @default(now())
}

model SheetRow {
  id          String    @id @unique @default(uuid())
  syncEvent   SyncEvent @relation(fields: [syncEventId], references: [id])
  syncEventId String
  rowData     Json
  rowNumber   Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
